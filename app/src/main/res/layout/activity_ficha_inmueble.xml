<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#54FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAtrasFicha"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:gravity="center_horizontal|center_vertical"
                app:backgroundTint="#1E150909"
                app:icon="@drawable/abc_vector_test"
                app:iconSize="25dp"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/estrellita_ficha"
                style="@style/FiamUI.Card.ActionBar.Button"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_marginStart="280dp"
                android:backgroundTint="#00FFFFFF"
                android:clickable="false"
                android:focusable="false"
                app:icon="@android:drawable/btn_star_big_on"
                app:iconSize="35dp"
                app:iconTint="#FFC107"
                app:strokeColor="#00FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="506dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.synnapps.carouselview.CarouselView
                        android:id="@+id/carouselView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:autoPlay="false"
                        app:fillColor="#FFFFFFFF"
                        app:pageColor="#00000000"
                        app:radius="6dp"
                        app:slideInterval="3000"
                        app:strokeColor="#FF777777"
                        app:strokeWidth="1dp" >

                    </com.synnapps.carouselview.CarouselView>


                    <Button
                        android:id="@+id/editButtonGestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#3F51B5"
                        android:text="Modificar datos del inmueble"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconGravity="textEnd"
                        app:iconSize="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewCalleFicha"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="calle"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewPrecioFicha"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="precio"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textViewSuperficieFicha"
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="superficie"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewHabitacionesFicha"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="numHabitaciones"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textViewBanosFicha"
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="numBaños"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="@string/descripcion"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textViewDescripcionFicha"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:text="describcionBox"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="@string/caracteristicas"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textViewCaracteristicasFicha"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:text="caracteristicas box"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="35dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp">

                        <Button
                            android:id="@+id/buttonFav"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="20dp"
                            android:backgroundTint="#3F51B5"
                            android:text="Añadir a Fav" />

                        <Button
                            android:id="@+id/buttonFavEliminar"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#3F51B5"
                            android:text="Elimiar de Fav" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="@string/anunciante"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textViewPropietarioFicha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="nomPropietario" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLlamar"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#8BC34A"
                    android:text="Llamar"
                    app:icon="@android:drawable/stat_sys_phone_call"
                    app:iconGravity="end" />

                <Button
                    android:id="@+id/buttonContactarFicha"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2196F3"
                    android:text="contactar"
                    app:icon="@drawable/messenger_bubble_small_white"
                    app:iconGravity="textEnd" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>