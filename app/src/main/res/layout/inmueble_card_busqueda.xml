<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_busqueda"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageinmueble"
            android:layout_width="150dp"
            android:layout_height="100dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/piso5" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Pisito en la playa"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.224"
            card_view:layout_constraintStart_toEndOf="@+id/imageinmueble"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="700â‚¬"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/imageinmueble"
            card_view:layout_constraintTop_toBottomOf="@+id/titulo"
            card_view:layout_constraintVertical_bias="0.174" />

        <LinearLayout
            android:id="@+id/sup"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/precio"
            card_view:layout_constraintTop_toBottomOf="@+id/titulo"
            card_view:layout_constraintVertical_bias="0.178">

            <TextView
                android:id="@+id/superficie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/metroscuadrados" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:layout_marginStart="28dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/sup"
            card_view:layout_constraintTop_toBottomOf="@+id/titulo"
            card_view:layout_constraintVertical_bias="0.17000002">

            <TextView
                android:id="@+id/habitaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/bed" />
        </LinearLayout>

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:text="Lorem impsum "
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.05"
            card_view:layout_constraintStart_toEndOf="@+id/imageinmueble"
            card_view:layout_constraintTop_toBottomOf="@+id/sup"
            card_view:layout_constraintVertical_bias="0.271" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_begin="72dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_begin="100dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>